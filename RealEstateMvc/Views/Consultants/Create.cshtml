@model RealEstateMvc.Models.ViewModels.ConsultantFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Consultant</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Consultant.Name" class="control-label"></label>
                <input asp-for="Consultant.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Consultant.Email" class="control-label"></label>
                <input asp-for="Consultant.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Consultant.Date" class="control-label"></label>
                <input asp-for="Consultant.Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Consultant.BaseSalary" class="control-label"></label>
                <input asp-for="Consultant.BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Consultant.DeparmentId" class="control-label"></label>
                <select asp-for="Consultant.DeparmentId" asp-items="@(new SelectList(Model.Departments, "Id","Name"))" 
                        class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>